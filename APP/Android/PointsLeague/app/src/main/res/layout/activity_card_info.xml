<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CardInfoActivity">

    <com.citiexchangeplatform.pointsleague.TitleBar
        android:id="@+id/toolbar_card_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                app:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:id="@+id/relative_card_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:background="@drawable/circle"
                            android:id="@+id/imageView_card_info"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:scaleType="centerInside"
                            android:layout_marginStart="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/nike_logo" />

                        <TextView
                            android:id="@+id/textView_name_card_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="28dp"
                            android:textSize="22sp"
                            android:textColor="@color/colorWhite"
                            android:text="XXXXXXX" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView_account2_card_info"
                        android:layout_marginTop="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000-0000-0000-0000"
                        android:textSize="16sp"
                        android:textColor="@color/colorWhite"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                app:cardPreventCornerOverlap="false">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_centerHorizontal="true">
                        <ImageView
                            android:id="@+id/imageview_barcode"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/BarCodeDescription"
                             />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:text="使用时，出示此码"
                            android:textSize="18sp"/>
                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_content_card_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"><!--100 270-->
            <View
                android:id="@+id/view_above_card_info"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@null" />


        </LinearLayout>


    </RelativeLayout>


</LinearLayout>